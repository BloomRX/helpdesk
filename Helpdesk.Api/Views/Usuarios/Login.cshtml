@{
    ViewData["Title"] = "Login";
}

<div class="container-glass" style="max-width: 500px;">
    <h2 class="text-center">Login</h2>

    @if (ViewBag.Erro != null)
    {
        <p class="text-danger text-center">@ViewBag.Erro</p>
    }

    <form asp-action="Login" method="post">
        <label>Email:</label>
        <input name="email" type="email" required class="form-control" /><br />

        <label>Senha:</label>
        <input name="senha" type="password" required class="form-control" /><br />

        <button type="submit" class="btn mt-2">Entrar</button>
    </form>

    <p class="mt-3">
        <a href="/Usuarios/Create">NÃ£o tem conta? Cadastre-se</a>
    </p>
</div>
