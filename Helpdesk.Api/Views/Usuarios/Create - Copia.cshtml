@model Helpdesk.Api.Models.Usuario

<form asp-action="Create" method="post">
    <div>
        <label>Nome</label>
        <input asp-for="Nome" />
        <span asp-validation-for="Nome" style="color:red"></span>
    </div>

    <div>
        <label>Email</label>
        <input asp-for="Email" />
        <span asp-validation-for="Email" style="color:red"></span>
    </div>

    <div>
        <label>Senha</label>
        <input asp-for="Senha" type="password" />
        <span asp-validation-for="Senha" style="color:red"></span>
    </div>

    <button type="submit">Cadastrar</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
