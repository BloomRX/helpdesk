@model Helpdesk.Api.Models.Usuario
@{
    ViewData["Title"] = "Cadastro";
}

<div class="container-glass">
    <h2 class="text-center">Cadastrar Usu√°rio</h2>

    <form asp-action="Create" method="post">
        <label>Nome:</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span><br />

        <label>Email:</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span><br />

        <label>Senha:</label>
        <input asp-for="Senha" type="password" class="form-control" />
        <span asp-validation-for="Senha" class="text-danger"></span><br />

        <label>Confirmar Senha:</label>
        <input asp-for="ConfirmarSenha" type="password" class="form-control" />
        <span asp-validation-for="ConfirmarSenha" class="text-danger"></span><br />

        <button type="submit" class="btn mt-3">Cadastrar</button>
    </form>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>
