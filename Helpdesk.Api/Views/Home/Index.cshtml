@model List<Helpdesk.Api.Models.Solicitacao>

@{
    ViewData["Title"] = "Página Inicial";
}

<h2>Últimas Solicitações</h2>

@if (!Model.Any())
{
    <p>Nenhuma solicitação registrada ainda.</p>
}
else
{
    <ul class="list-group" style="max-width: 20cm;">
        @foreach (var s in Model)
        {
            <li class="list-group-item">
                <strong>@s.Titulo</strong><br />
                @s.Descricao<br />
                <small class="text-muted">Enviado em @s.DataAbertura</small>
            </li>
        }
    </ul>
}

<div class="mt-3">
    <a class="btn btn-primary" asp-controller="Solicitacoes" asp-action="Create">
        Nova Solicitação
    </a>
    <a class="btn btn-link" asp-controller="Solicitacoes" asp-action="Index">
        Ver todas
    </a>
</div>
