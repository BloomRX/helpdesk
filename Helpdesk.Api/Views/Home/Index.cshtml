@model List<Helpdesk.Api.Models.Solicitacao>

@{
    ViewData["Title"] = "Página Inicial";
}

<h2>Últimas Solicitações</h2>

@if (!Model.Any())
{
    <p>Nenhuma solicitação registrada ainda.</p>
}
else
{
    <ul class="list-group">
        @foreach (var s in Model)
        {
            <li class="list-group-item position-relative">
                <a asp-controller="Solicitacoes"
                asp-action="Detalhes"
                asp-route-id="@s.Id"
                class="stretched-link text-decoration-none">
                    <strong>@s.Titulo</strong>
                </a>
                <br />
                <small class="text-muted">
                    @s.Descricao  
                    <br />
                    <em>Por @s.EmailUsuario em @s.DataAbertura.ToString("dd/MM/yyyy HH:mm")</em>
                </small>
            </li>
        }
    </ul>
}

<div class="mt-3">
    <a class="btn btn-primary" asp-controller="Solicitacoes" asp-action="Create">
        Nova Solicitação
    </a>
    <a class="btn btn-link" asp-controller="Solicitacoes" asp-action="Index">
        Ver todas
    </a>
</div>
