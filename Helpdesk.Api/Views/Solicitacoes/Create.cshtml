@model Helpdesk.Api.Models.Solicitacao

@{
    ViewData["Title"] = "Solicitação de Ajuda";
}

<h1 class="text-center">Solicitação de Ajuda</h1>
<p class="text-center">Use o formulário abaixo para criar um pedido de ajuda.</p>

<form asp-action="Create" method="post" class="w-50 mx-auto" id="solicitacao_ajuda">
    <div class="form-group mb-3">
        <label asp-for="Titulo">Assunto:</label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Descricao">Descrição:</label>
        <textarea asp-for="Descricao" class="form-control" rows="6" maxlength="500"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CategoriaId">Categoria:</label>
        <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.Categorias">
            <option value="">Selecione...</option>
        </select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>

    <div class="form-group text-center">
        <button type="reset" class="btn btn-secondary me-2">Limpar</button>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
