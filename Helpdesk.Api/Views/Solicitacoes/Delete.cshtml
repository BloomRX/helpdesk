@model Solicitacao

@{
    ViewData["Title"] = "Excluir Solicitação";
}

<h2>Confirmar Exclusão</h2>

<div class="alert alert-danger">
    Tem certeza que deseja excluir esta solicitação?
</div>

<dl class="row">
    <dt class="col-sm-2">Título</dt>
    <dd class="col-sm-10">@Model.Titulo</dd>

    <dt class="col-sm-2">Descrição</dt>
    <dd class="col-sm-10">@Model.Descricao</dd>

    <dt class="col-sm-2">Autor</dt>
    <dd class="col-sm-10">@Model.EmailUsuario</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Detalhes" asp-route-id="@Model.Id" class="btn btn-secondary">Cancelar</a>
</form>
