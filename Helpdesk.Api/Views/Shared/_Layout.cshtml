@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var usuarioEmail = HttpContextAccessor.HttpContext?.Session.GetString("UsuarioEmail");
    var usuarioTipo = HttpContextAccessor.HttpContext?.Session.GetString("UsuarioTipo");
    var isAdmin = usuarioTipo == "Admin";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"]?.ToString() ?? "Helpdesk")</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black border-bottom box-shadow mb-3">

            <div class="container">
                <img src="Helpdesk.Api\Views\Shared\Estrela.webp" Class="image">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Helpdesk</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (isAdmin)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Usuarios" asp-action="Index">Usuários</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (usuarioEmail == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Usuarios" asp-action="Login">Login</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark">@usuarioEmail</span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Usuarios" asp-action="Logout" method="post">
                                    <button type="submit" class="btn btn-link nav-link">Sair</button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>